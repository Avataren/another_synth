{
  "name": "synth",
  "version": "0.0.1",
  "description": "web synth",
  "productName": "Synthesizer",
  "author": "Morten Andersson <morten.andersson@gmail.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .js,.ts,.vue ./",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "coverage": "vitest run --coverage",
    "dev": "concurrently \"npm:dev:wasm\" \"npm:dev:worklets\" \"quasar dev\"",
    "dev:wasm": "node build-wasm.cjs --watch",
    "dev:worklets": "node build-worklets.cjs --watch",
    "build:worklets": "node build-worklets.cjs",
    "build:wasm": "node build-wasm.cjs",
    "build": "npm run build:wasm && npm run build:worklets && quasar build",
    "postinstall": "quasar prepare",
    "asbuild:debug": "asc src/assembly/synth.ts --sharedMemory --maximumMemory 1024 --enable threads --importMemory --target debug",
    "asbuild:release": "asc src/assembly/synth.ts --sharedMemory --maximumMemory 1024 --enable threads --importMemory --target release",
    "asbuild": "npm run asbuild:debug && npm run asbuild:release",
    "start": "npx serve ."
  },
  "dependencies": {
    "@quasar/extras": "^1.16.4",
    "axios": "^1.2.1",
    "fft.js": "^4.0.4",
    "pinia": "^2.0.11",
    "quasar": "^2.16.0",
    "vue": "^3.4.18",
    "vue-router": "^4.0.12",
    "webmidi": "^3.1.12"
  },
  "devDependencies": {
    "@quasar/app-vite": "^2.0.0-rc.4",
    "@types/node": "^20.5.9",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitest/ui": "^2.1.8",
    "@vue/test-utils": "^2.4.6",
    "assemblyscript": "^0.27.31",
    "autoprefixer": "^10.4.2",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.0.3",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.8.0",
    "vite-plugin-wasm": "^3.3.0",
    "vitest": "^2.1.8",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  },
  "exports": {
    ".": {
      "import": "./build/release.js",
      "types": "./build/release.d.ts"
    }
  }
}
